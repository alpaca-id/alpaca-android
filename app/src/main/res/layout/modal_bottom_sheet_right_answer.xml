<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_right"
        style="@style/Theme.Alpaca.Text.Title.Large"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/hurray"
        android:textColor="@color/green_500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_right_answer"
        style="@style/Theme.Alpaca.Text.Body.Large"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/right_answer"
        android:textColor="@color/green_500"
        app:layout_constraintStart_toStartOf="@id/tv_right"
        app:layout_constraintTop_toBottomOf="@id/tv_right" />

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/green_500"
        android:text="@string/continue_stage"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_right_answer" />
</androidx.constraintlayout.widget.ConstraintLayout>