<resources>
    <!-- Base application theme. -->
    <style name="Theme.Alpaca" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_500</item>
        <item name="colorPrimaryVariant">@color/yellow_700</item>
        <item name="colorOnPrimary">@color/blue_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white_warm</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white_warm</item>
        <item name="bottomSheetDialogTheme">@style/Theme.Alpaca.BottomSheetDialogTheme</item>
    </style>

    <!--  BottomSheetDialog Theme  -->
    <style name="Theme.Alpaca.BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_500</item>
        <item name="colorPrimaryVariant">@color/yellow_700</item>
        <item name="colorOnPrimary">@color/blue_900</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_top_rounded</item>
    </style>

    <!--  Custom Chip Style  -->
    <style name="Theme.Alpaca.Chip" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/color_chip_background</item>
        <item name="android:textColor">@color/color_chip_text</item>
    </style>

    <!--  Text Styles  -->
    <style name="Theme.Alpaca.Text">
        <item name="android:textColor">@color/blue_900</item>
    </style>

    <style name="Theme.Alpaca.Text.Headline">
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="Theme.Alpaca.Text.Headline.Large">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Theme.Alpaca.Text.Headline.Medium">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Theme.Alpaca.Text.Headline.Small">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.Alpaca.Text.Title">
        <item name="fontFamily">@font/product_sans_bold</item>
    </style>

    <style name="Theme.Alpaca.Text.Title.Large">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Theme.Alpaca.Text.Title.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Alpaca.Text.Title.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Alpaca.Text.Body">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.Alpaca.Text.Body.Large">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="Theme.Alpaca.Text.Body.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Alpaca.Text.Body.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.Alpaca.Text.Label">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Alpaca.Text.Label.Large">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Alpaca.Text.Label.Medium">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.Alpaca.Text.Label.Small">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Theme.Alpaca.Button.Auth" parent="Widget.Material3.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue_900</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Alpaca.Text.Body.Medium.Auth">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.Alpaca.Text.Body.Large.Setting">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Theme.Alpaca.Text.Label.Medium.Profile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Theme.Alpaca.InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.Alpaca.InputLayout.Auth">
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
    </style>

    <style name="Theme.Alpaca.InputLayout.Profile">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <style name="Theme.Alpaca.Text.Body.Small.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>


    <style name="Theme.Alpaca.Button.Play" parent="Widget.Material3.Button.Icon">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue_900</item>
    </style>
</resources>